{
  "name": "poui",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "commit": "git add -A && git-cz",
    "postinstall": "pnpx simple-git-hooks"
  },
  "dependencies": {
    "@iconify-json/mingcute": "^1.1.9",
    "@poui/style": "workspace:*",
    "cva": "npm:class-variance-authority@^0.7.0",
    "poui": "workspace:*",
    "sass": "^1.66.1",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.41.0",
    "@tsconfig/node18": "^18.2.1",
    "@types/node": "^18.17.9",
    "@unocss/eslint-config": "^0.55.2",
    "@unocss/transformer-compile-class": "^0.55.2",
    "@unocss/transformer-directives": "^0.55.2",
    "@unocss/transformer-variant-group": "^0.55.2",
    "@vitejs/plugin-vue": "^4.3.3",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vue/tsconfig": "^0.4.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.47.0",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "simple-git-hooks": "^2.9.0",
    "typescript": "~5.1.6",
    "unocss": "^0.55.2",
    "vite": "^4.4.9",
    "vue-tsc": "^1.8.8"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "volta": {
    "node": "18.17.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
